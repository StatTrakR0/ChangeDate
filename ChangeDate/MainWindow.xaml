<Window x:Class="ChangeDate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChangeDate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_1" HorizontalAlignment="Left" Height="52" Margin="84,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="35" TextChanged="tb_1_TextChanged"/>
        <TextBox x:Name="tb_2" HorizontalAlignment="Left" Height="52" Margin="564,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="35" TextChanged="tb_2_TextChanged"/>
        <Button x:Name="ChangeButton" Content="Change date" HorizontalAlignment="Left" Margin="324,187,0,0" VerticalAlignment="Top" Width="174" Height="52" FontSize="25" Click="ChangeButton_Click"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Height="56" Margin="324,320,0,0" VerticalAlignment="Top" Width="174" FontSize="35" Click="Exit_Click"/>
    </Grid>
</Window>
